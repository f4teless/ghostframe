{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/renderer",
    "rootDir": "./src/renderer",
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"]
  },
  "include": ["src/renderer/**/*", "src/shared/**/*"],
  "exclude": ["src/main/**/*", "node_modules", "dist"]
} 